import rclpy
from rclpy.node import Node
from sensor_msgs.msg import Image
from cv_bridge import CvBridge
import cv2
import numpy as np
from rclpy.qos import QoSProfile, ReliabilityPolicy, HistoryPolicy # <--- NUOVO

class DominoDetector(Node):
    def __init__(self):
        super().__init__('domino_detector')
        
        # --- CONFIGURAZIONE QoS (Cruciale per Gazebo) ---
        # Impostiamo la policy su BEST_EFFORT per essere compatibili con Gazebo
        qos_policy = QoSProfile(
            reliability=ReliabilityPolicy.BEST_EFFORT,
            history=HistoryPolicy.KEEP_LAST,
            depth=10
        )

        # Sottoscrizione con la nuova policy QoS
        self.subscription = self.create_subscription(
            Image,
            '/camera/image_raw',
            self.image_callback,
            qos_policy) # <--- Usiamo la policy qui
            
        self.bridge = CvBridge()
        self.get_logger().info('Nodo di visione avviato con QoS compatibile! In attesa...')
# Sottoscrizione con la nuova policy QoS e il NOME CORRETTO
        self.subscription = self.create_subscription(
            Image,
            '/table_camera/image_raw',  # <--- MODIFICATO QUI (era /camera/image_raw)
            self.image_callback,
            qos_policy)

    def image_callback(self, msg):
        self.get_logger().info('Immagine ricevuta!', once=True) # Logga solo la prima volta per conferma

        try:
            cv_image = self.bridge.imgmsg_to_cv2(msg, "bgr8")
        except Exception as e:
            self.get_logger().error(f'Errore conversione: {e}')
            return

        hsv_image = cv2.cvtColor(cv_image, cv2.COLOR_BGR2HSV)

        # ROSSO
        lower_red1 = np.array([0, 100, 100])
        upper_red1 = np.array([10, 255, 255])
        lower_red2 = np.array([160, 100, 100])
        upper_red2 = np.array([180, 255, 255])
        mask_red = cv2.bitwise_or(cv2.inRange(hsv_image, lower_red1, upper_red1), 
                                  cv2.inRange(hsv_image, lower_red2, upper_red2))
        
        # VERDE
        lower_green = np.array([40, 100, 100])
        upper_green = np.array([80, 255, 255])
        mask_green = cv2.inRange(hsv_image, lower_green, upper_green)
        
        # BLU
        lower_blue = np.array([100, 100, 100])
        upper_blue = np.array([140, 255, 255])
        mask_blue = cv2.inRange(hsv_image, lower_blue, upper_blue)

        self.draw_contours(cv_image, mask_red, (0, 0, 255), "ROSSO")
        self.draw_contours(cv_image, mask_green, (0, 255, 0), "VERDE")
        self.draw_contours(cv_image, mask_blue, (255, 0, 0), "BLU")

        cv2.imshow("Robot View", cv_image)
        cv2.waitKey(1)

    def draw_contours(self, image, mask, color, label):
        contours, _ = cv2.findContours(mask, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
        for contour in contours:
            if cv2.contourArea(contour) > 100: 
                cv2.drawContours(image, [contour], -1, color, 2)
                M = cv2.moments(contour)
                if M["m00"] != 0:
                    cX = int(M["m10"] / M["m00"])
                    cY = int(M["m01"] / M["m00"])
                    cv2.putText(image, label, (cX - 20, cY - 20),
                                cv2.FONT_HERSHEY_SIMPLEX, 0.5, (255, 255, 255), 2)

def main(args=None):
    rclpy.init(args=args)
    node = DominoDetector()
    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        pass
    finally:
        node.destroy_node()
        rclpy.shutdown()
        cv2.destroyAllWindows() # Chiude la finestra quando esci

if __name__ == '__main__':
    main()
